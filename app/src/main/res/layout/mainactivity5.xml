<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        app:layout_constraintTop_toTopOf="parent"
        <ImageView

            android:id="@+id/img"

            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"

            android:background="@drawable/ic_action_name"
            android:layout_width="10.74dp"
            android:layout_height="18.77dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/txet"

            android:textSize="12dp"
            android:text="back"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="51dp"
            android:layout_width="30dp"
            android:layout_height="17dp"/>


        <TextView
            android:textStyle="bold"
            android:id="@+id/txet4"
            android:layout_width="287dp"
            android:layout_height="116dp"
            android:layout_marginTop="90dp"
            android:paddingLeft="35dp"
            android:text="Recover your account"
            android:textColor="#000000"
            android:textSize="40dp" />

    </RelativeLayout>
<EditText
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="center"
    android:layout_marginTop="305dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_gravity="center_horizontal"
    android:hint="Enter email,username or phone number"
    android:textSize="14dp"
    android:id="@+id/Edit"
    android:layout_width="290dp"
    android:layout_height="0dp"/>

    <Button
        android:text="Next"
        android:textSize="20dp"
        android:textColor="#C80000"
        android:padding="10dp"
        android:background="@drawable/shapbtn2"

        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn"
        android:layout_width="112.67dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>