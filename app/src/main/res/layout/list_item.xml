<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ImageView
    android:id="@+id/imgs"
    android:layout_margin="20dp"
    android:background="@drawable/s1"
    android:layout_width="30dp"
    android:layout_height="30dp"/>
    <TextView
        android:id="@+id/texts"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Jennifer"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="25dp"
        android:layout_width="58dp"
        android:layout_height="20dp"/>
    <TextView

        android:id="@+id/texts2"
        android:textColor="#9F9F9F"
        android:textSize="10dp"
        android:text="2 hours ago"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="28dp"
        android:layout_width="59dp"
        android:layout_height="18dp"/>
    <ImageView
        android:layout_below="@+id/imgs"
        android:layout_centerHorizontal="true"
        android:background="@drawable/s2"
        android:id="@+id/imgs2"
        android:layout_width="343dp"
        android:layout_height="209dp"/>

    <TextView
        android:id="@+id/texts3"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="260dp"
        android:text="Tomorrow Land"
        android:layout_width="112dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/texts4"
        android:textColor="#FFDD00"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="260dp"
        android:text="ACTIVE"
        android:layout_width="44dp"
        android:layout_height="17dp"/>
    <Button
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        android:background="@drawable/btns"
        android:id="@+id/btns"
        android:layout_width="72.61dp"
        android:layout_height="29dp"/>
    <TextView
        android:textSize="12dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:text="Going to Tomorrow land, looking for someone to
join me on this epic journey through Tomorrow land"
        android:id="@+id/texts5"
        android:layout_width="309dp"
        android:layout_height="35dp"/>
    <ImageView
        android:background="@drawable/s3"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="380dp"
        android:id="@+id/imgs3"
        android:layout_width="16.41dp"
        android:layout_height="18.23dp"/>
    <ImageView
        android:background="@drawable/s4"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="380dp"
        android:id="@+id/imgs4"
        android:layout_width="14dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/line"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="367dp"
        android:layout_width="312dp"
        android:layout_height="1dp"
        android:background="#DCDCDC" />

</RelativeLayout>