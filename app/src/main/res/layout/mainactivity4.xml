<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        app:layout_constraintTop_toTopOf="parent"

        <ImageView

            android:id="@+id/img"

            android:layout_width="10.74dp"
            android:layout_height="18.77dp"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_action_name" />

        <TextView
            android:id="@+id/txet"

            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="51dp"
            android:text="back"
            android:textSize="12dp" />


    </RelativeLayout>

    <TextView
      android:textColor="#000000"
      android:paddingLeft="35dp"
      android:textStyle="bold"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="90dp"
      app:layout_constraintTop_toTopOf="parent"
      android:id="@+id/txet4"
      android:textSize="40dp"
      android:text="Your phone number"
      android:layout_width="240dp"
      android:layout_height="116dp"/>
    <EditText
       
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="305dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_horizontal"
        android:hint="  +1  (123)  456-7890"
       android:textColor="#000000"
        android:textSize="14dp"
        android:id="@+id/Edit"
        android:layout_width="290dp"
        android:layout_height="0dp"/>

    <Spinner
        android:background="@drawable/c1"
        android:layout_marginLeft="102dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="315dp"
        android:id="@+id/spinner"
        android:layout_width="28dp"
        android:layout_height="18dp"/>
    <Button
        android:text="Next"
        android:textSize="20dp"
        android:textColor="#C80000"
        android:padding="10dp"
        android:background="@drawable/shapbtn2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/btn"
        android:layout_width="112.67dp"
        android:layout_height="45dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>